@page "/PostPage/{Title}"
@using Domain.Models
@using Domain.DTOs
@using BlazorApp.Services.ClientInterfaces
@inject IPostService postService
<h3>Post</h3>

@if (currentpost == null)
    {
        <label>Loading Post data..</label>
    }
    else
    {
        <div>
            <div>@currentpost.UserName</div>
            <div>@currentpost.Title</div>
            <div>@currentpost.Body</div>
        </div>
    }
@code {
    [Parameter]
    public string Title { get; set; }
    
    private string msg = "";
    private PostCreationDto currentpost;
    
    protected override async Task OnInitializedAsync()
    {
        msg = "";
        try
        {
            
           currentpost= await postService.GetByTitleAsync(Title);
           
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }
}