
@page "/login"
@using Domain.DTOs
@using HttpClients.ClientInterfaces
@inject IUserService userService;

<h3></h3>
<div class="toLine">
<div class="card1">
    <h3>Login</h3>
    <div class="form-group field">
        <label>User name:</label>
        <input type="text" @bind="usernameLog" @bind:event="oninput"/>
        <label>Password:</label>
        <input type="text" @bind="passwordLog" @bind:event="oninput"/>
        @if (!string.IsNullOrEmpty(resultMsg))
        {
            <label style="color: @color">@resultMsg</label>
        }
    </div>
    <div class="button-row">
        <button  disabled="@(string.IsNullOrEmpty(usernameLog))" class="acceptbtn">Log in</button>
    </div>
</div>
<div class="card2">
    <h3>Create User</h3>
    <div class="form-group field">
        <label>User name:</label>
        <input type="text" @bind="username" @bind:event="oninput"/>
        <label>Password:</label>
        <input type="text" @bind="password" @bind:event="oninput"/>
        @if (!string.IsNullOrEmpty(resultMsg))
        {
            <label style="color: @color">@resultMsg</label>
        }
    </div>
    <div class="button-row">
        <button @onclick="Create" disabled="@(string.IsNullOrEmpty(username))" class="acceptbtn">Create</button>
    </div>
</div>
</div>
@code {
    private string username = "";
    private string password = "";
    private string usernameLog = "";
    private string passwordLog = "";
    private string resultMsg = "";
    private string color = "";
    
    private async Task Create()
    {
        resultMsg = "";

        try
        {
            await userService.Create(new UserCreationDto(username, password));
            username = "";
            password = "";
            resultMsg = "User successfully created";
            color = "green";
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            resultMsg = e.Message;
            color = "red";
        }
    }
}